<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#222222"
    android:layout_marginBottom="12dp"
    android:elevation="2dp"
    android:layout_marginHorizontal="8dp">

    <!-- Usuario y fecha -->
    <TextView
        android:id="@+id/txtUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginBottom="2dp" />

    <!-- Vista normal -->
    <TextView
        android:id="@+id/txtHoras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/txtObs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <!-- Botones de acciÃ³n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="end">

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:textSize="12sp"
            android:background="#444444"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:textSize="12sp"
            android:background="#B00020"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Campos editables (ocultos por defecto) -->
    <EditText
        android:id="@+id/editUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:textColor="#FFFFFF"
        android:background="#333333"
        android:visibility="gone"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/editFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha (dd/MM/yyyy)"
        android:textColor="#FFFFFF"
        android:background="#333333"
        android:visibility="gone"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/editEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora entrada (HH:mm)"
        android:textColor="#FFFFFF"
        android:background="#333333"
        android:visibility="gone"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/editSalida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora salida (HH:mm)"
        android:textColor="#FFFFFF"
        android:background="#333333"
        android:visibility="gone"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/editObs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Observaciones"
        android:textColor="#FFFFFF"
        android:background="#333333"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:textSize="12sp"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:visibility="gone" />
</LinearLayout>