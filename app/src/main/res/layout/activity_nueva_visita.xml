<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/fondo_diario_claro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="8dp">

        <EditText
            android:id="@+id/edtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha (dd/MM/yyyy)"
            android:inputType="date"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtEntrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de entrada (HH:mm)"
            android:inputType="time"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtSalida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de salida (HH:mm)"
            android:inputType="time"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtDesplazamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Desplazamiento"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Observaciones"
            android:minLines="3"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textAllCaps="false"
            android:backgroundTint="?android:attr/colorAccent"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>