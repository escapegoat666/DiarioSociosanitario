<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutHistorialDiario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo_diario_claro"
    tools:context=".ui.HistorialDiarioActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSeleccionarFecha"
        style="@style/BotonMorado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar DÃ­a"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerVisitas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:visibility="gone"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/txtResumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resumen"
        android:textSize="16sp"
        android:textColor="?attr/colorOnPrimary"
        android:background="?attr/colorPrimary"
        android:padding="12dp"
        android:visibility="gone" />
</LinearLayout>