<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/fondo_diario_claro">

    <TextView
        android:id="@+id/txtTituloImportar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importar copia de seguridad"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnImportarJson"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cargar copia de seguridad"
        android:textAllCaps="false"
        android:backgroundTint="?android:attr/colorAccent"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/txtTituloImportar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>