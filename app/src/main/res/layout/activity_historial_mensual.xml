<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutHistorialMensual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo_diario_claro"
    tools:context=".ui.HistorialMensualActivity">

    <!-- Sección de mes, año y botón -->
    <LinearLayout
        android:id="@+id/layoutMesAnio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Spinner
                android:id="@+id/spinnerMes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:popupTheme="@style/ThemeOverlay.MaterialComponents" />

            <Spinner
                android:id="@+id/spinnerAnio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:popupTheme="@style/ThemeOverlay.MaterialComponents" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCargarMes"
            style="@style/BotonMorado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargar Mes"
            android:textAllCaps="false" />
    </LinearLayout>

    <!-- Lista de visitas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerVisitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:paddingBottom="8dp" />

    <!-- Resumen del mes -->
    <TextView
        android:id="@+id/txtResumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resumen"
        android:textSize="16sp"
        android:textColor="?attr/colorOnPrimary"
        android:background="?attr/colorPrimary"
        android:padding="12dp"
        android:visibility="gone" />
</LinearLayout>