<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Título centrado -->
    <style name="TextoTitulo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Campo de entrada con fondo editable -->
    <style name="CampoEntrada">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@android:drawable/edit_text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Botón Entrada -->
    <style name="BotonEntrada" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#D32F2F</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Botón Salida -->
    <style name="BotonSalida" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#388E3C</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Botón Historial -->
    <style name="BotonHistorial" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#1976D2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Botón Morado con texto adaptable al tema -->
    <style name="BotonMorado" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/boton_morado</item>
        <item name="android:textColor">@color/texto_boton</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>